<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="TextImageView">
        <attr name="type">
            <enum name="textView" value="0" />
            <enum name="imageView" value="1" />
        </attr>
        <attr name="text" format="string" />
        <attr name="image" format="reference" />
        <attr name="drawableLeft" format="reference" />
        <attr name="drawableRight" format="reference" />
        <attr name="textSize" format="dimension" />
        <attr name="textColor" format="color" />
    </declare-styleable>

    <declare-styleable name="BarView">
        <attr name="bar_type">
            <enum name="NORMAL" value="0" />
            <enum name="SEARCH" value="1" />
        </attr>
        <attr name="customer_menu" format="string" />

        <attr name="leftText" format="string" />
        <attr name="leftImage" format="reference" />
        <attr name="leftTextSize" format="dimension" />
        <attr name="leftTextColor" format="color" />
        <attr name="leftVisible" format="boolean" />

        <attr name="rightText" format="string" />
        <attr name="rightImage" format="reference" />
        <attr name="rightTextSize" format="dimension" />
        <attr name="rightTextColor" format="color" />
        <attr name="rightVisible" format="boolean" />

        <attr name="titleText" format="string" />
        <attr name="titleImage" format="reference" />
        <attr name="titleTextSize" format="dimension" />
        <attr name="titleTextColor" format="color" />
        <attr name="titleVisible" format="boolean" />

        <attr name="hintText" format="string" />
        <attr name="hintTextColor" format="color" />
        <attr name="searchViewBackground" format="reference" />
        <attr name="searchViewDrawableLeft" format="reference" />
        <attr name="searchViewDrawableRight" format="reference" />
        <attr name="searchViewVisible" format="integer" />


    </declare-styleable>
</resources>